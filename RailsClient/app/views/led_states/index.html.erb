<h2>LED配置列表</h2>
<% if @msg && !@msg.result %>
    <div class="error">
      <%= @msg.content %>
    </div>
<% end %>
<%= link_to '新建LED配置', send("new_led_state_path"), :class => 'btn btn-default'%>

<table class="table table-bordered table-striped globle-table">
  <thead>
  <tr>
    <th>状态</th>
    <th colspan="2">颜色</th>
    <th>闪烁代码</th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <%@led_states.each do |led|%>
      <tr>
        <td><%=LedLightState.display(led.state)%></td>
        <td><%=led.rgb%></td>
        <td style="<%= "background-color: rgb(#{led.R},#{led.G},#{led.B})" %>"></td>
        <td><%=led.led_code%></td>
        <td><%= link_to "编辑",edit_led_state_path(led),:class=>"btn btn-default" %></td>
        <td><%= link_to '删除', led, method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-default' %></td>
      </tr>
  <%end%>
  </tbody>
</table>
